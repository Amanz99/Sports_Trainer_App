<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/grey"
    tools:context=".UpdateProfileFragment"
    android:layout_gravity="center"
    android:gravity="center">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Profile"
        android:textStyle="bold"
        android:textSize="24sp"
        android:textColor="@android:color/black"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="24dp"/>

    <!-- Add input fields for updating username and password here -->
    <!-- Username input -->
    <EditText
        android:id="@+id/current_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Current Email"
        android:background="@color/white"
        android:layout_marginBottom="16dp"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/update_email_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new Email"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"/>

    <EditText
        android:id="@+id/current_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter current password"
        android:inputType="textPassword"
        android:layout_marginBottom="16dp"
        android:background="@android:color/white"/>

    <!-- Password input -->
    <EditText
        android:id="@+id/update_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Enter new password"
        android:inputType="textPassword"
        android:background="@android:color/white"/>

    <!-- Update Button -->
    <Button
        android:id="@+id/update_profile_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp"
        android:text="Update Profile"/>
</LinearLayout>